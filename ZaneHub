-- Zane Hub | Grow a Garden
-- UI by Rayfield, modified by ChatGPT
-- Features: Auto Farm, Teleport, Shop, Pets, etc.

loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local rs = game:GetService("ReplicatedStorage")

-- Window Setup
local Window = Rayfield:CreateWindow({
   Name = "Zane Hub | Grow a Garden",
   LoadingTitle = "Zane Hub",
   LoadingSubtitle = "Loading...",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "ZaneHub",
      FileName = "GrowAGarden"
   },
   Discord = { Enabled = false },
   KeySystem = false,
})

-- Main Tab
local MainTab = Window:CreateTab("Main", 4483362458)
MainTab:CreateToggle({
   Name = "Auto Water",
   Callback = function(state)
      getgenv().AutoWater = state
      while getgenv().AutoWater do
         pcall(function()
            rs.Events.WaterPlant:FireServer()
         end)
         task.wait(0.5)
      end
   end,
})

-- Pets Tab
local PetTab = Window:CreateTab("üêæ Pets", 4483362458)
PetTab:CreateToggle({
   Name = "Auto Hatch Basic Pet",
   CurrentValue = false,
   Callback = function(state)
      getgenv().AutoBasicPet = state
      while getgenv().AutoBasicPet do
         pcall(function()
            rs.Events.HatchPet:InvokeServer("Basic")
         end)
         task.wait(1.5)
      end
   end,
})
PetTab:CreateToggle({
   Name = "Auto Hatch Middle Pet",
   CurrentValue = false,
   Callback = function(state)
      getgenv().AutoMiddlePet = state
      while getgenv().AutoMiddlePet do
         pcall(function()
            rs.Events.HatchPet:InvokeServer("Middle")
         end)
         task.wait(1.5)
      end
   end,
})
PetTab:CreateToggle({
   Name = "Auto Hatch Legendary Pet",
   CurrentValue = false,
   Callback = function(state)
      getgenv().AutoLegendPet = state
      while getgenv().AutoLegendPet do
         pcall(function()
            rs.Events.HatchPet:InvokeServer("Legendary")
         end)
         task.wait(1.5)
      end
   end,
})
